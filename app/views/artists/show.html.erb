<div class="container">
	<div class="row">
		<div class="show-album">
			<div class="col-xs-9">
				<h1><%= @artist.name %></h1>
				<br>	
				<h3>Albums(<%= @album.count  %>)</h3>
				<br>
				<% @album.each do |albun| %>
					<div class="col-xs-3">
						<div class="thumbnail">
							<%= image_tag albun.image_url, :class => "artist-image" %>
							<div class="caption">
							  	<h3><%= albun.name %></h3>	
							   	<p><%= albun.released_at %></p>
							</div>
						</div>
					</div>
				<% end %>
			</div>
		</div>
		
		<div class="col-xs-3 ">
			
		</div>
	</div>
</div>